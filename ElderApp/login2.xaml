<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElderApp.login2">
    <ScrollView>
        <StackLayout>
            <Grid VerticalOptions="CenterAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Entry Placeholder="UserName" x:Name="EntryUser" Grid.Row="0"/>
                <Entry Placeholder="Password" x:Name="EntryUser" Grid.Row="1"/>
                <Button Text="Log in" Grid.Row="2" BackgroundColor="#0077be" Clicked="Handle_Clicked_1"/>
            </Grid>
        </StackLayout>
     </ScrollView> 

</ContentPage>
